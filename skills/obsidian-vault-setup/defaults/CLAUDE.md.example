attendees:
  - "[[Person Name]]"
  - "[[Another Person]]"
tags:
  - Meetings
created: YYYY-MM-DD HH:MM
start: YYYY-MM-DDTHH:MM:SS-TZ
end: YYYY-MM-DDTHH:MM:SS-TZ
gmeet: https://meet.google.com/xxx-yyyy-zzz
agenda: https://docs.google.com/document/d/...
